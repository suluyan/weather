/**index.wxss**/
.bg{
  background: url("../../images/bg.jpg") ;
  background-size: 750px auto;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -10;
  width:100%;
  height:100%;
}
.box{
  width: 100%;
  height: 50rpx;
  color:#fff;
  padding-top: 10px;
}
.box .left{
  float: left;
}
.add{
  float: left;
  margin: 0 5px;
}
.adr{
  float: left;
  font-size: 16px;
}
.neir{
  height:360px;
  width:100%;
  color:#fff;
}
.con{
  position: relative;
}
.wendu{
  position: absolute;
  left: 10px;
  top: 20px;
  font-size: 60px;
}
.qing{
  position: absolute;
  left: 100px;
  top: 28px;
}
.shidu{
  position: absolute;
  top: 100px;
  left: 10px;
}
.shidu view{
  float: left;
  font-size: 14px;
  margin-right: 5px;
}
.zhil{
  position: absolute;
  width: 70px;
  height: 26px;
  top: 120px;
  left: 10px;
  background: rgba(0,0,0,0.2);
  border-radius: 5px;
  line-height: 26px;
}
.zhil view{
  float: left;
  margin:0 4px;
  color: #fff;
}
.per{
  background: url("../../images/9.png") center center;
  background-size: 180px auto;
  position: absolute;
  top: 80px;
  right: 10px;
