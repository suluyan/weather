/*24*/
.hour{
  width: 100%;
  overflow-x: auto;
  height: 95px;
  background: rgba(0,0,0,0.4);
  margin-bottom: 10px;
}
.title{
  background: rgba(0,0,0,0.4);
  padding-left: 10px;
  color: #fff;
  font-size: 14px;
  line-height: 30px;
  margin-bottom: 1px;
}
.xian{
  width:120%;  
  height: 70px;
  border-bottom: 1px solid #fff;
  position: relative;
}
.top{
  height: 25px;
  overflow-y: auto;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}
.bottom{
  height: 20px;
  position: absolute;
  bottom:-20px;
  left: 0;
  overflow-x: auto;
  width: 100%;
}
.dian{
  float: left;
  width: 36px;
  height: 25px;
  border-radius: 3px 3px 0 0;
  margin: 0 0px 0 1px;
  background: rgba(255, 255, 255, 0.8);
}
.time{
  width: 36px;
  font-size: 12px;
  color:#fff;
  float: left;
  text-align: center;
  margin-left: 1px;
}
/*day*/
.day{
  width:100%;
  height: 400px; 
